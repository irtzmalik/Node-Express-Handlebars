<div class ="banner_image" >
<img src="/assets/images/burger.png">

</div>


<h1>Eat Da Burger</h1>
<br>
<div id='add'>
    <h2>Add a Burger: </h2>

    <form class="create-update-form" action="/" method="POST">
        <div class="form-group">
            <label for="burg">Burger Name:</label>
            <input type="text" id="burg" name="burger_name">
            <button style="height:50px;"class="btn btn-primary add-btn" type="submit">Add Burger</button>
            
        </div>
        
    </form>

    <form class="delete-form" action="/delete" method="POST">
        <div class="form-group">
            <label for="burg">Clear All:</label>
    
            <button style="height:50px;"class="btn btn-primary clear-btn" type="submit">Clear Data</button>
            
        </div>
        
    </form>
</div>
<div class="container">
  <div class="row">
    
<div id="to_Eat" class="col-lg-6">
    <h2>Burgers to devour:</h2>
    <ul>
        {{#each burgers}} {{#unless this.devoured}}
        <li>
            {{this.id}}. {{this.burger_name}}

            <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="false">
                <button class="btn btn-warning dev-btn" type="submit">Devour</button>
            </form>

        </li>
        {{/unless}} {{/each}}
    </ul>
</div>
<div id ="devoured" class="col-lg-6 text-left">
    <h2>Burgers Devoured: </h2>

    <ul class="text-left">
        {{#each burgers}} {{#if this.devoured}}
        <li>
            {{this.id}}. {{this.burger_name}}
        </li>
        {{/if}} {{/each}}
    </ul>
</div>
</div>
</div>


